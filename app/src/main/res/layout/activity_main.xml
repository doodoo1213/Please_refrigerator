<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- img_meat list -->
        <TextView
            android:id="@+id/Meat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_title_meat"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/list_meat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/main_items"
                />
        </HorizontalScrollView>

        <!-- img_vegetable list -->
        <TextView
            android:id="@+id/Vegetable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_title_vegetable"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:textSize="25sp" />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/list_vegetable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/main_items"
                />
        </HorizontalScrollView>

        <!-- img_etc list -->
        <TextView
            android:id="@+id/etc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_title_etc"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/list_etc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/main_items"
                />
        </HorizontalScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/btn_add"
        android:onClick="Input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_input"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"/>
</FrameLayout>