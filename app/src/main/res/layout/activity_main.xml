<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.kimjuyoung.please_refrigerator.MainActivity">

<TextView
    android:id="@+id/Vegetable"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Vegetable"
    android:textColor="@color/colorPrimary"
    android:textSize="25sp"
    android:layout_marginTop="100dp"
    android:layout_below="@+id/Meat"
    android:layout_alignLeft="@+id/Meat"
    android:layout_alignStart="@+id/Meat" />

<TextView
    android:id="@+id/etc"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Etc"
    android:textColor="@color/colorPrimaryDark"
    android:textSize="25sp"
    tools:layout_editor_absoluteY="267dp"
    tools:layout_editor_absoluteX="16dp"
    android:layout_marginTop="100dp"
    android:layout_below="@+id/Vegetable"
    android:layout_alignLeft="@+id/Vegetable"
    android:layout_alignStart="@+id/Vegetable" />

<ImageButton
    android:id="@+id/ADDBTN"
    android:layout_width="368dp"
    android:layout_height="77dp"
    app:srcCompat="@android:drawable/ic_input_add"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="418dp"
    android:layout_marginBottom="20dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"/>

<TextView
    android:id="@+id/Meat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Meat"
    android:textColor="@color/colorAccent"
    android:textSize="25sp"
    android:layout_marginTop="25dp"
    android:layout_marginLeft="20dp"/>

<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/Meat"
    android:layout_alignLeft="@+id/Vegetable"
    android:layout_alignStart="@+id/Vegetable">

    <include
        android:id="@+id/m_button_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/meat_list"
        />
</HorizontalScrollView>

<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/Vegetable"
    android:layout_alignRight="@+id/ADDBTN"
    android:layout_alignEnd="@+id/ADDBTN">

    <include
        android:id="@+id/v_button_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/vegetable_list"
        />
</HorizontalScrollView>

<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignLeft="@+id/etc"
    android:layout_alignStart="@+id/etc"
    android:layout_below="@+id/etc"
    android:layout_above="@+id/ADDBTN">


    <include
        android:id="@+id/e_button_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/etc_list"
        />
</HorizontalScrollView>

</RelativeLayout>